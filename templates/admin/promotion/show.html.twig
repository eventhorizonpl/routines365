{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_workspace') }}">
            {{ 'Workspace'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('admin_promotion_index') }}">
            {{ 'Promotions'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">
        {{ 'Promotion details'|trans }}
    </li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Promotion details'|trans }}
            <a class="btn btn-secondary btn-sm float-right ml-2" href="{{ path('admin_promotion_index') }}">
                <i aria-hidden="true" class="bi bi-x-square"></i>
            </a>
            <a class="btn btn-success btn-sm float-right" href="{{ path('admin_promotion_edit', {'uuid': promotion.uuid}) }}">
                <i aria-hidden="true" class="bi bi-pencil-square"></i>
                {{ 'Edit'|trans }}
            </a>
            <ul class="nav nav-tabs card-header-tabs mt-2" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="basic-tab" data-toggle="tab" href="#basic" role="tab" aria-controls="home" aria-selected="true">
                        {{ 'Basic'|trans }}
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="relations-tab" data-toggle="tab" href="#relations" role="tab" aria-controls="relations" aria-selected="true">
                        {{ 'Relations'|trans }}
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="additional-tab" data-toggle="tab" href="#additional" role="tab" aria-controls="contact" aria-selected="false">
                        {{ 'Additional'|trans }}
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="basic" role="tabpanel" aria-labelledby="basic-tab">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 20%;">
                                    {{ 'Code'|trans }}
                                </th>
                                <td>
                                    {{ promotion.code }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Name'|trans }}
                                </th>
                                <td>
                                    {{ promotion.name }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Description'|trans }}
                                </th>
                                <td>
                                    {{ promotion.description }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Is enabled'|trans }}
                                </th>
                                <td>
                                    {% if promotion.isEnabled %}
                                        <span class="badge badge-success">
                                            {{ 'Yes'|trans }}
                                        </span>
                                    {% else %}
                                        <span class="badge badge-danger">
                                            {{ 'No'|trans }}
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Browser notifications'|trans }}
                                </th>
                                <td>
                                    {{ promotion.browserNotifications }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Email notifications'|trans }}
                                </th>
                                <td>
                                    {{ promotion.emailNotifications }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Sms notifications'|trans }}
                                </th>
                                <td>
                                    {{ promotion.smsNotifications }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Type'|trans }}
                                </th>
                                <td>
                                    {{ promotion.type }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Expires at'|trans }}
                                </th>
                                <td>
                                    {{ promotion.expiresAt ? promotion.expiresAt|date('Y-m-d H:i:s') : '' }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane fade show" id="relations" role="tabpanel" aria-labelledby="relations-tab">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 20%;">
                                    {{ 'Users'|trans }}
                                </th>
                                <td>
                                    {% if promotion.users|length %}
                                        <ul>
                                            {% for user in promotion.users %}
                                                <li>
                                                    <a href="{{ path('admin_user_show', {'uuid': user.uuid}) }}">
                                                        {{ user.email }}
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane fade" id="additional" role="tabpanel" aria-labelledby="contact-tab">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 20%;">
                                    {{ 'ID'|trans }}
                                </th>
                                <td>
                                    {{ promotion.id }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'UUID'|trans }}
                                </th>
                                <td>
                                    {{ promotion.uuid }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Created by'|trans }}
                                </th>
                                <td>
                                    {% if promotion.createdBy %}
                                        <a href="{{ path('admin_user_show', {'uuid': promotion.createdBy}) }}">
                                            {{ promotion.createdBy }}
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Deleted by'|trans }}
                                </th>
                                <td>
                                    {% if promotion.deletedBy %}
                                        <a href="{{ path('admin_user_show', {'uuid': promotion.deletedBy}) }}">
                                            {{ promotion.deletedBy }}
                                        </a>
                                        <a class="btn btn-warning" href="{{ path('admin_promotion_undelete', {'uuid': promotion.uuid}) }}">
                                            <i aria-hidden="true" class="bi bi-trash-restore"></i>
                                            {{ 'Undelete'|trans }}
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Updated by'|trans }}
                                </th>
                                <td>
                                    {% if promotion.updatedBy %}
                                        <a href="{{ path('admin_user_show', {'uuid': promotion.updatedBy}) }}">
                                            {{ promotion.updatedBy }}
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Created at'|trans }}
                                </th>
                                <td>
                                    {{ promotion.createdAt ? promotion.createdAt|date('Y-m-d H:i:s') : '' }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Deleted at'|trans }}
                                </th>
                                <td>
                                    {% if promotion.deletedAt %}
                                        {{ promotion.deletedAt|date('Y-m-d H:i:s') }}
                                        <a class="btn btn-warning" href="{{ path('admin_promotion_undelete', {'uuid': promotion.uuid}) }}">
                                            <i aria-hidden="true" class="bi bi-trash-restore"></i>
                                            {{ 'Undelete'|trans }}
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Updated at'|trans }}
                                </th>
                                <td>
                                    {{ promotion.updatedAt ? promotion.updatedAt|date('Y-m-d H:i:s') : '' }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'Promotion details'|trans }}
{% endblock %}
