{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_workspace') }}">
            {{ 'Workspace'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('admin_promotion_index') }}">
            {{ 'Promotions'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">
        {{ 'Edit promotion'|trans }}
    </li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Edit promotion'|trans }}
            <a class="btn btn-info btn-sm float-right" href="{{ path('admin_promotion_index') }}">
                <i aria-hidden="true" class="bi bi-arrow-left-square"></i>
                {{ 'Back'|trans }}
            </a>
        </div>
        <div class="card-body">
            {{ include('admin/promotion/_form.html.twig', {'button_label': 'Update'|trans}) }}

            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <br>
                {{ include('admin/promotion/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} - {{ 'Edit promotion'|trans }}{% endblock %}
