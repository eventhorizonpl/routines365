{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_workspace') }}">
            {{ 'Workspace'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('admin_contact_index') }}">
            {{ 'Contacts'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">
        {{ 'Edit contact'|trans }}
    </li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Edit contact'|trans }}
            <a class="btn btn-info btn-sm float-right" href="{{ path('admin_contact_index') }}">
                <i aria-hidden="true" class="bi bi-arrow-left-square"></i>
                {{ 'Back'|trans }}
            </a>
        </div>
        <div class="card-body">
            {{ include('admin/contact/_form.html.twig', {'button_label': 'Update'|trans}) }}
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} - {{ 'Edit contact'|trans }}{% endblock %}
