{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_workspace') }}">
            {{ 'Workspace'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('admin_user_index') }}">
            {{ 'Users'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">
        {{ 'Create a lead'|trans }}
    </li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Create a lead'|trans }}
            <a class="btn btn-secondary btn-sm float-right" href="{{ path('admin_user_index') }}">
                <i aria-hidden="true" class="bi bi-x-square"></i>
            </a>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                {{ form_errors(form) }}

                {{ form_row(form.email) }}
                {{ form_row(form.profile.phone) }}
                {{ form_row(form.profile.sendWeeklyMonthlyStatistics) }}
                {{ form_row(form.profile.showMotivationalMessages) }}
                {{ form_row(form.profile.theme) }}
                {{ form_row(form.profile.timeZone) }}
                {{ form_row(form.browserNotifications) }}
                {{ form_row(form.emailNotifications) }}
                {{ form_row(form.smsNotifications) }}

                <hr>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <button class="btn btn-primary" type="submit" title="{{ button_label|default('Save'|trans) }}">
                            <i aria-hidden="true" class="bi bi-save"></i>
                            {{ button_label|default('Save'|trans) }}
                        </button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'Create a lead'|trans }}
{% endblock %}
