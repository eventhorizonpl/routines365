{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_workspace') }}">
            {{ 'Workspace'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">
        {{ 'Users'|trans }}
    </li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Users'|trans }}
            <a class="btn btn-info btn-sm float-right" href="{{ path('admin_user_new') }}">
                <i class="fas fa-plus"></i>
                {{ 'Create'|trans }}
            </a>
            <form action="{{ path('admin_user_index') }}" class="form-inline mt-2" method="get">
                <div class="form-group">
                    <input class="form-control" id="starts_at" name="starts_at" type="date" value="{{ parameters.starts_at ? parameters.starts_at|date('Y-m-d') : '' }}">
                </div>
                <div class="form-group">
                    <input class="form-control" id="ends_at" name="ends_at" type="date" value="{{ parameters.ends_at ? parameters.ends_at|date('Y-m-d') : '' }}">
                </div>
                <div class="form-group">
                    <select class="custom-select" id="type" name="type">
                        <option value="" selected>{{ 'Type'|trans }}</option>
                        {% for type_value in userType() %}
                            <option value="{{ type_value }}" {% if parameters.type == type_value %}selected{% endif %}>{{ type_value }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" id="q" name="q" placeholder="{{ 'Search'|trans }}" type="text" value="{{ parameters.query }}">
                </div>
                <button class="btn btn-default" type="submit">
                    <i class="fa fa-search"></i>
                    {{ 'Search'|trans }}
                </button>
                <a class="btn {% if not (parameters.type or parameters.query or parameters.starts_at or parameters.ends_at) %}disabled{% endif %} btn-default" href="{{ path('admin_user_index') }}">
                    <i class="fas fa-times"></i>
                </a>
            </form>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th {% if users.isSorted('u.Uuid') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(users, 'UUID'|trans, 'u.uuid') }}</th>
                        <th {% if users.isSorted('u.Email') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(users, 'Email'|trans, 'u.email') }}</th>
                        <th {% if users.isSorted('u.IsEnabled') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(users, 'Is enabled'|trans, 'u.isEnabled') }}</th>
                        <th {% if users.isSorted('u.IsVerified') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(users, 'Is verified'|trans, 'u.isVerified') }}</th>
                        <th>{{ 'Roles'|trans }}</th>
                        <th {% if users.isSorted('u.Type') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(users, 'Type'|trans, 'u.type') }}</th>
                        <th {% if users.isSorted('u.DeletedAt') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(users, 'Deleted at'|trans, 'u.deletedAt') }}</th>
                        <th {% if users.isSorted('u.UpdatedAt') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(users, 'Updated at'|trans, 'u.updatedAt') }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td><a href="{{ path('admin_user_show', {'uuid': user.uuid}) }}">{{ user.uuid }}</a></td>
                            <td>{{ user.email }}</td>
                            <td>
                                {% if user.isEnabled %}
                                    <span class="badge badge-success">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if user.isVerified %}
                                    <span class="badge badge-success">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% for role in user.roles %}
                                    {{ role }}{% if not loop.last %},{% endif %}
                                {% endfor %}
                            </td>
                            <td>{{ user.type }}</td>
                            <td>{{ user.deletedAt ? user.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop{{ user.id }}" type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop{{ user.id }}">
                                        <a class="dropdown-item" href="{{ path('admin_user_show', {'uuid': user.uuid}) }}"><i class="fas fa-eye"></i> {{ 'Show'|trans }}</a>
                                        <a class="dropdown-item" href="{{ path('admin_user_edit', {'uuid': user.uuid}) }}"><i class="fas fa-edit"></i> {{ 'Edit'|trans }}</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">{{ 'No records found'|trans }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(users) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} - {{ 'Users'|trans }}{% endblock %}
