{% extends 'admin_layout.html.twig' %}

{% block title %}{{ parent() }} - {{ 'Users'|trans }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Users'|trans }}
            <a class="btn btn-info btn-sm float-right" href="{{ path('admin_user_new') }}">
                <i class="fas fa-plus"></i>
                {{ 'Create'|trans }}
            </a>
            <form action="{{ path('admin_user_index') }}" class="form-inline mt-2"" method="get">
                <div class="form-group">
                    <input class="form-control" id="q" name="q" placeholder="{{ 'Search'|trans }}" type="text" value="{{ parameters.query }}">
                </div>
                <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i> {{ 'Search'|trans }}</button>
                <a class="btn {% if not parameters.query %}disabled{% endif %} btn-default" href="{{ path('admin_user_index') }}">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </form>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th {% if users.isSorted('u.Email') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(users, 'Email'|trans, 'q.email') }}</th>
                        <th {% if users.isSorted('u.IsEnabled') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(users, 'Is enabled'|trans, 'q.isEnabled') }}</th>
                        <th {% if users.isSorted('u.IsVerified') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(users, 'Is verified'|trans, 'q.isVerified') }}</th>
                        <th>{{ 'Roles'|trans }}</th>
                        <th {% if users.isSorted('u.UpdatedAt') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(users, 'Updated at'|trans, 'q.updatedAt') }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.email }}</td>
                        <td>
                            {% if user.isEnabled %}
                                <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                            {% else %}
                                <span class="badge badge-danger">{{ 'No'|trans }}</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if user.isVerified %}
                                <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                            {% else %}
                                <span class="badge badge-danger">{{ 'No'|trans }}</span>
                            {% endif %}
                        </td>
                        <td>
                            {% for role in user.roles %}
                                {{ role }}{% if not loop.last %},{% endif %}
                            {% endfor %}
                        </td>
                        <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button id="btnGroupDrop{{ user.id }}" type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop{{ user.id }}">
                                    <a class="dropdown-item" href="{{ path('admin_user_show', {'uuid': user.uuid}) }}"><i class="fas fa-eye"></i> {{ 'Show'|trans }}</a>
                                    <a class="dropdown-item" href="{{ path('admin_user_edit', {'uuid': user.uuid}) }}"><i class="fas fa-edit"></i> {{ 'Edit'|trans }}</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">{{ 'No records found'|trans }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(users) }}
            </div>
        </div>
    </div>
{% endblock %}
