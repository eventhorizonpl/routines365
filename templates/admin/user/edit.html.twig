{% extends 'admin_layout.html.twig' %}

{% block title %}{{ parent() }} - {{ 'Edit User'|trans }} {% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">{{ 'Dashboard'|trans }}</a></li>
    <li class="breadcrumb-item"><a href="{{ path('admin_user_index') }}">{{ 'Users'|trans }}</a></li>
    <li class="breadcrumb-item active">{{ 'Edit User'|trans }}</li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Edit User'|trans }}
            <a class="btn btn-info btn-sm float-right" href="{{ path('admin_user_index') }}">
                <i class="fas fa-arrow-left"></i>
                {{ 'Back'|trans }}
            </a>
        </div>
        <div class="card-body">
            {{ include('admin/user/_form.html.twig', {'button_label': 'Update'|trans}) }}

            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <br>
                {{ include('admin/user/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}
