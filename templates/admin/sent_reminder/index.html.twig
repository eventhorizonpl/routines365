{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_workspace') }}">
            {{ 'Workspace'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">
        {{ 'Sent reminders'|trans }}
    </li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Sent reminders'|trans }} ({{ parameters.count }})
            <form action="{{ path('admin_sent_reminder_index') }}" class="form-inline mt-2" method="get">
                <div class="form-group">
                    <input class="form-control" id="starts_at" name="starts_at" type="date" value="{{ parameters.starts_at ? parameters.starts_at|date('Y-m-d') : '' }}">
                </div>
                <div class="form-group">
                    <input class="form-control" id="ends_at" name="ends_at" type="date" value="{{ parameters.ends_at ? parameters.ends_at|date('Y-m-d') : '' }}">
                </div>
                <button class="btn btn-default" type="submit">
                    <i class="fa fa-search"></i>
                    {{ 'Search'|trans }}
                </button>
                <a class="btn {% if not (parameters.starts_at or parameters.ends_at) %}disabled{% endif %} btn-default" href="{{ path('admin_sent_reminder_index') }}">
                    <i class="fas fa-times"></i>
                </a>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th {% if sent_reminders.isSorted('sr.Uuid') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(sent_reminders, 'UUID'|trans, 'sr.uuid') }}</th>
                            <th {% if sent_reminders.isSorted('srru.Email') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(sent_reminders, 'Email'|trans, 'srru.email') }}</th>
                            <th {% if sent_reminders.isSorted('sr.Reminder') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(sent_reminders, 'Reminder'|trans, 'srr.uuid') }}</th>
                            <th {% if sent_reminders.isSorted('sr.Routine') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(sent_reminders, 'Routine'|trans, 'srro.uuid') }}</th>
                            <th {% if sent_reminders.isSorted('sr.UpdatedAt') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(sent_reminders, 'Updated at'|trans, 'sr.updatedAt') }}</th>
                            <th>{{ 'Actions'|trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for sent_reminder in sent_reminders %}
                            <tr>
                                <td><a href="{{ path('admin_sent_reminder_show', {'uuid': sent_reminder.uuid}) }}">{{ sent_reminder.uuid }}</a></td>
                                <td>
                                    {% if sent_reminder.reminder.user %}
                                        <a href="{{ path('admin_user_show', {'uuid': sent_reminder.reminder.user.uuid}) }}">{{ sent_reminder.reminder.user.email }}</a>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if sent_reminder.reminder %}
                                        <a href="{{ path('admin_reminder_show', {'uuid': sent_reminder.reminder.uuid}) }}">{{ sent_reminder.reminder.uuid }}</a>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if sent_reminder.routine %}
                                        <a href="{{ path('admin_routine_show', {'uuid': sent_reminder.routine.uuid}) }}">{{ sent_reminder.routine.uuid }}</a>
                                    {% endif %}
                                </td>
                                <td>{{ sent_reminder.updatedAt ? sent_reminder.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button id="btnGroupDrop{{ sent_reminder.id }}" type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop{{ sent_reminder.id }}">
                                            <a class="dropdown-item" href="{{ path('admin_sent_reminder_show', {'uuid': sent_reminder.uuid}) }}"><i class="fas fa-eye"></i> {{ 'Show'|trans }}</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">{{ 'No records found'|trans }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <div class="navigation">
                    {{ knp_pagination_render(sent_reminders) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} - {{ 'Sent reminders'|trans }}{% endblock %}
