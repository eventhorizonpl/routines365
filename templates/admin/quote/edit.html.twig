{% extends 'admin_layout.html.twig' %}

{% block title %}{{ parent() }} - {{ 'Edit Quote'|trans }} {% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Edit Quote'|trans }}
            <a class="btn btn-info btn-sm float-right" href="{{ path('admin_quote_index') }}">
                <i class="fas fa-arrow-left"></i>
                {{ 'Back'|trans }}
            </a>
        </div>
        <div class="card-body">
            {{ include('admin/quote/_form.html.twig', {'button_label': 'Update'|trans}) }}

            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <br>
                {{ include('admin/quote/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}
