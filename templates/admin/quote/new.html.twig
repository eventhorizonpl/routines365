{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">{{ 'Dashboard'|trans }}</a></li>
    <li class="breadcrumb-item"><a href="{{ path('admin_quote_index') }}">{{ 'Quotes'|trans }}</a></li>
    <li class="breadcrumb-item active">{{ 'Create Quote'|trans }}</li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Create Quote'|trans }}
            <a class="btn btn-info btn-sm float-right" href="{{ path('admin_quote_index') }}">
                <i class="fas fa-arrow-left"></i>
                {{ 'Back'|trans }}
            </a>
        </div>
        <div class="card-body">
            {{ include('admin/quote/_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} - {{ 'Create Quote'|trans }} {% endblock %}
