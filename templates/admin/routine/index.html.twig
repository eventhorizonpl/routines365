{% extends 'admin_layout.html.twig' %}

{% block title %}{{ parent() }} - {{ 'Routines'|trans }}{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">{{ 'Dashboard'|trans }}</a></li>
    <li class="breadcrumb-item active">{{ 'Routines'|trans }}</li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Routines'|trans }}
            <form action="{{ path('admin_routine_index') }}" class="form-inline mt-2" method="get">
                <div class="form-group">
                    <select class="custom-select" id="type" name="type">
                        <option value="" selected>{{ 'Type'|trans }}</option>
                        {% for type_value in routineType() %}
                            <option value="{{ type_value }}" {% if parameters.type == type_value %}selected{% endif %}>{{ type_value }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" id="q" name="q" placeholder="{{ 'Search'|trans }}" type="text" value="{{ parameters.query }}">
                </div>
                <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i> {{ 'Search'|trans }}</button>
                <a class="btn {% if not parameters.query %}disabled{% endif %} btn-default" href="{{ path('admin_routine_index') }}">
                    <i class="fas fa-times"></i>
                </a>
            </form>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th {% if routines.isSorted('r.Uuid') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(routines, 'UUID'|trans, 'r.uuid') }}</th>
                        <th {% if routines.isSorted('ru.Email') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(routines, 'Email'|trans, 'ru.email') }}</th>
                        <th {% if routines.isSorted('r.Name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(routines, 'Name'|trans, 'r.name') }}</th>
                        <th {% if routines.isSorted('r.Description') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(routines, 'Description'|trans, 'r.description') }}</th>
                        <th {% if routines.isSorted('r.Type') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(routines, 'Type'|trans, 'r.type') }}</th>
                        <th {% if routines.isSorted('r.IsEnabled') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(routines, 'Is enabled'|trans, 'r.isEnabled') }}</th>
                        <th {% if routines.isSorted('r.UpdatedAt') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(routines, 'Updated at'|trans, 'r.updatedAt') }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                {% for routine in routines %}
                    <tr>
                        <td>{{ routine.uuid }}</td>
                        <td>
                            {% if routine.user %}
                                <a href="{{ path('admin_user_show', {'uuid': routine.user.uuid}) }}">{{ routine.user.email }}</a>
                            {% endif %}
                        </td>
                        <td>
                            {% if routine.name %}
                                <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                            {% else %}
                                <span class="badge badge-danger">{{ 'No'|trans }}</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if routine.description %}
                                <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                            {% else %}
                                <span class="badge badge-danger">{{ 'No'|trans }}</span>
                            {% endif %}
                        </td>
                        <td>{{ routine.type }}</td>
                        <td>
                            {% if routine.isEnabled %}
                                <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                            {% else %}
                                <span class="badge badge-danger">{{ 'No'|trans }}</span>
                            {% endif %}
                        </td>
                        <td>{{ routine.updatedAt ? routine.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button id="btnGroupDrop{{ routine.id }}" type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop{{ routine.id }}">
                                    <a class="dropdown-item" href="{{ path('admin_routine_show', {'uuid': routine.uuid}) }}"><i class="fas fa-eye"></i> {{ 'Show'|trans }}</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">{{ 'No records found'|trans }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(routines) }}
            </div>
        </div>
    </div>
{% endblock %}
