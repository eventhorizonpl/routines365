{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">{{ 'Dashboard'|trans }}</a></li>
    <li class="breadcrumb-item active">{{ 'Goals'|trans }}</li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Goals'|trans }}
            <form action="{{ path('admin_goal_index') }}" class="form-inline mt-2" method="get">
                <div class="form-group">
                    <input class="form-control" id="starts_at" name="starts_at" type="date" value="{{ parameters.starts_at ? parameters.starts_at|date('Y-m-d') : '' }}">
                </div>
                <div class="form-group">
                    <input class="form-control" id="ends_at" name="ends_at" type="date" value="{{ parameters.ends_at ? parameters.ends_at|date('Y-m-d') : '' }}">
                </div>
                <div class="form-group">
                    <input class="form-control" id="q" name="q" placeholder="{{ 'Search'|trans }}" type="text" value="{{ parameters.query }}">
                </div>
                <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i> {{ 'Search'|trans }}</button>
                <a class="btn {% if not parameters.query %}disabled{% endif %} btn-default" href="{{ path('admin_goal_index') }}">
                    <i class="fas fa-times"></i>
                </a>
            </form>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th {% if goals.isSorted('g.Uuid') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(goals, 'UUID'|trans, 'g.uuid') }}</th>
                        <th {% if goals.isSorted('gu.Email') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(goals, 'Email'|trans, 'gu.email') }}</th>
                        <th {% if goals.isSorted('g.Name') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(goals, 'Name'|trans, 'g.name') }}</th>
                        <th {% if goals.isSorted('g.Description') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(goals, 'Description'|trans, 'g.description') }}</th>
                        <th {% if goals.isSorted('g.IsCompleted') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(goals, 'Is completed'|trans, 'g.isCompleted') }}</th>
                        <th {% if goals.isSorted('g.DeletedAt') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(goals, 'Deleted at'|trans, 'g.deletedAt') }}</th>
                        <th {% if goals.isSorted('g.UpdatedAt') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(goals, 'Updated at'|trans, 'g.updatedAt') }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for goal in goals %}
                        <tr>
                            <td>{{ goal.uuid }}</td>
                            <td>
                                {% if goal.user %}
                                    <a href="{{ path('admin_user_show', {'uuid': goal.user.uuid}) }}">{{ goal.user.email }}</a>
                                {% endif %}
                            </td>
                            <td>
                                {% if goal.name %}
                                    <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if goal.description %}
                                    <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if goal.isCompleted %}
                                    <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>{{ goal.deletedAt ? goal.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ goal.updatedAt ? goal.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop{{ goal.id }}" type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop{{ goal.id }}">
                                        <a class="dropdown-item" href="{{ path('admin_goal_show', {'uuid': goal.uuid}) }}"><i class="fas fa-eye"></i> {{ 'Show'|trans }}</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">{{ 'No records found'|trans }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(goals) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} - {{ 'Goals'|trans }}{% endblock %}
