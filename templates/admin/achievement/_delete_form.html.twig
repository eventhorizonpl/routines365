<form method="post" action="{{ path('admin_achievement_delete', {'uuid': achievement.uuid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ achievement.uuid) }}">
    <button class="btn btn-warning"><i aria-hidden="true" class="bi bi-trash"></i> {{ 'Delete'|trans }}</button>
</form>
