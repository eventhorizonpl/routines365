{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_workspace') }}">
            {{ 'Workspace'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('admin_testimonial_index') }}">
            {{ 'Testimonials'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">
        {{ 'Testimonial details'|trans }}
    </li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Testimonial details'|trans }}
            <a class="btn btn-info btn-sm float-right" href="{{ path('admin_testimonial_index') }}">
                <i aria-hidden="true" class="bi bi-arrow-left-square"></i>
                {{ 'Back'|trans }}
            </a>
            <ul class="nav nav-tabs card-header-tabs mt-2" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="basic-tab" data-toggle="tab" href="#basic" role="tab" aria-controls="home" aria-selected="true">{{ 'Basic'|trans }}</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="relations-tab" data-toggle="tab" href="#relations" role="tab" aria-controls="relations" aria-selected="true">{{ 'Relations'|trans }}</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="additional-tab" data-toggle="tab" href="#additional" role="tab" aria-controls="testimonial" aria-selected="false">{{ 'Additional'|trans }}</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="basic" role="tabpanel" aria-labelledby="basic-tab">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 20%;">{{ 'Content'|trans }}</th>
                                <td>{{ testimonial.content }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'Signature'|trans }}</th>
                                <td>{{ testimonial.signature }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'Status'|trans }}</th>
                                <td>{{ testimonial.status }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'Is visible'|trans }}</th>
                                <td>
                                    {% if testimonial.isVisible %}
                                        <span class="badge badge-success">{{ 'Yes'|trans }}</span>
                                    {% else %}
                                        <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane fade show" id="relations" role="tabpanel" aria-labelledby="relations-tab">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 20%;">{{ 'User'|trans }}</th>
                                <td>
                                    {% if testimonial.user %}
                                        <a href="{{ path('admin_user_show', {'uuid': testimonial.user.uuid}) }}">{{ testimonial.user.email }}</a>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane fade" id="additional" role="tabpanel" aria-labelledby="testimonial-tab">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 20%;">{{ 'ID'|trans }}</th>
                                <td>{{ testimonial.id }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'UUID'|trans }}</th>
                                <td>{{ testimonial.uuid }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'Created by'|trans }}</th>
                                <td>
                                    {% if testimonial.createdBy %}
                                        <a href="{{ path('admin_user_show', {'uuid': testimonial.createdBy}) }}">{{ testimonial.createdBy }}</a>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'Deleted by'|trans }}</th>
                                <td>
                                    {% if testimonial.deletedBy %}
                                        <a href="{{ path('admin_user_show', {'uuid': testimonial.deletedBy}) }}">{{ testimonial.deletedBy }}</a>
                                        <a class="btn btn-warning" href="{{ path('admin_testimonial_undelete', {'uuid': testimonial.uuid}) }}"><i aria-hidden="true" class="bi bi-trash-restore"></i> {{ 'Undelete'|trans }}</a>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'Updated by'|trans }}</th>
                                <td>
                                    {% if testimonial.updatedBy %}
                                        <a href="{{ path('admin_user_show', {'uuid': testimonial.updatedBy}) }}">{{ testimonial.updatedBy }}</a>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'Created at'|trans }}</th>
                                <td>{{ testimonial.createdAt ? testimonial.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'Deleted at'|trans }}</th>
                                <td>
                                    {% if testimonial.deletedAt %}
                                        {{ testimonial.deletedAt|date('Y-m-d H:i:s') }}
                                        <a class="btn btn-warning" href="{{ path('admin_testimonial_undelete', {'uuid': testimonial.uuid}) }}"><i aria-hidden="true" class="bi bi-trash-restore"></i> {{ 'Undelete'|trans }}</a>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">{{ 'Updated at'|trans }}</th>
                                <td>{{ testimonial.updatedAt ? testimonial.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <a class="btn btn-success" href="{{ path('admin_testimonial_edit', {'uuid': testimonial.uuid}) }}">
                <i aria-hidden="true" class="bi bi-pencil-square"></i>
                {{ 'Edit'|trans }}
            </a>
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} - {{ 'Testimonial details'|trans }}{% endblock %}
