{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('admin_workspace') }}">{{ 'Workspace'|trans }}</a></li>
    <li class="breadcrumb-item active">{{ 'Reminders'|trans }}</li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Reminders'|trans }}
            <form action="{{ path('admin_reminder_index') }}" class="form-inline mt-2" method="get">
                <div class="form-group">
                    <input class="form-control" id="starts_at" name="starts_at" type="date" value="{{ parameters.starts_at ? parameters.starts_at|date('Y-m-d') : '' }}">
                </div>
                <div class="form-group">
                    <input class="form-control" id="ends_at" name="ends_at" type="date" value="{{ parameters.ends_at ? parameters.ends_at|date('Y-m-d') : '' }}">
                </div>
                <div class="form-group">
                    <select class="custom-select" id="type" name="type">
                        <option value="" selected>{{ 'Type'|trans }}</option>
                        {% for type_value in reminderType() %}
                            <option value="{{ type_value }}" {% if parameters.type == type_value %}selected{% endif %}>{{ type_value }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <input class="form-control" id="q" name="q" placeholder="{{ 'Search'|trans }}" type="text" value="{{ parameters.query }}">
                </div>
                <button class="btn btn-default" type="submit"><i class="fa fa-search" aria-hidden="true"></i> {{ 'Search'|trans }}</button>
                <a class="btn {% if not (parameters.query or parameters.starts_at or parameters.ends_at or parameters.type) %}disabled{% endif %} btn-default" href="{{ path('admin_reminder_index') }}">
                    <i class="fas fa-times"></i>
                </a>
            </form>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th {% if reminders.isSorted('r.Uuid') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'UUID'|trans, 'r.uuid') }}</th>
                        <th {% if reminders.isSorted('ru.Email') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'Email'|trans, 'ru.email') }}</th>
                        <th {% if reminders.isSorted('r.Hour') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'Hour'|trans, 'r.hour') }}</th>
                        <th {% if reminders.isSorted('r.IsEnabled') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'Is enabled'|trans, 'r.isEnabled') }}</th>
                        <th {% if reminders.isSorted('r.MinutesBefore') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'Minutes before'|trans, 'r.minutesBefore') }}</th>
                        <th {% if reminders.isSorted('r.NextDate') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'Next date'|trans, 'r.nextDate') }}</th>
                        <th {% if reminders.isSorted('r.PreviousDate') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'Previous date'|trans, 'r.previousDate') }}</th>
                        <th {% if reminders.isSorted('r.SendEmail') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'Send email'|trans, 'r.sendEmail') }}</th>
                        <th {% if reminders.isSorted('r.SendSms') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'Send sms'|trans, 'r.sendSms') }}</th>
                        <th {% if reminders.isSorted('r.SendMotivationalMessage') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'Send motivational message'|trans, 'r.sendMotivationalMessage') }}</th>
                        <th {% if reminders.isSorted('r.Type') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'Type'|trans, 'r.type') }}</th>
                        <th {% if reminders.isSorted('r.DeletedAt') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'Deleted at'|trans, 'r.deletedAt') }}</th>
                        <th {% if reminders.isSorted('r.LockedAt') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'Locked at'|trans, 'r.lockedAt') }}</th>
                        <th {% if reminders.isSorted('r.UpdatedAt') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(reminders, 'Updated at'|trans, 'r.updatedAt') }}</th>
                        <th>{{ 'Actions'|trans }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% for reminder in reminders %}
                        <tr>
                            <td>{{ reminder.uuid }}</td>
                            <td>
                                {% if reminder.user %}
                                    <a href="{{ path('admin_user_show', {'uuid': reminder.user.uuid}) }}">{{ reminder.user.email }}</a>
                                {% endif %}
                            </td>
                            <td>
                                {% if reminder.hour %}
                                    <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if reminder.isEnabled %}
                                    <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if reminder.minutesBefore %}
                                    <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if reminder.nextDate %}
                                    <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if reminder.previousDate %}
                                    <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if reminder.sendEmail %}
                                    <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if reminder.sendSms %}
                                    <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if reminder.sendMotivationalMessage %}
                                    <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'No'|trans }}</span>
                                {% endif %}
                            </td>
                            <td>{{ reminder.type }}</td>
                            <td>{{ reminder.lockedAt ? reminder.lockedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ reminder.deletedAt ? reminder.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ reminder.updatedAt ? reminder.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button id="btnGroupDrop{{ reminder.id }}" type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop{{ reminder.id }}">
                                        <a class="dropdown-item" href="{{ path('admin_reminder_show', {'uuid': reminder.uuid}) }}"><i class="fas fa-eye"></i> {{ 'Show'|trans }}</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="13">{{ 'No records found'|trans }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div class="navigation">
                {{ knp_pagination_render(reminders) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} - {{ 'Reminders'|trans }}{% endblock %}
