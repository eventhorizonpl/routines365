{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_workspace') }}">
            {{ 'Workspace'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('admin_questionnaire_show', {'uuid': question.questionnaire.uuid}) }}">
            {{ 'Questionnaire details'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">
        {{ 'Create question'|trans }}
    </li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Create question'|trans }}
            <a class="btn btn-info btn-sm float-right" href="{{ path('admin_questionnaire_show', {'uuid': question.questionnaire.uuid}) }}">
                <i class="fas fa-arrow-left"></i>
                {{ 'Back'|trans }}
            </a>
        </div>
        <div class="card-body">
            {{ include('admin/question/_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} - {{ 'Create question'|trans }}{% endblock %}
