                    </tr>
                    <tr>
                        <td><a href="{{ path('admin_user_index') }}">{{ 'Profiles'|trans }}</a></td>
                        <td>{{ profiles_count }}</td>
                    </tr>
                    <tr>
                        <td><a href="{{ path('admin_quote_index') }}">{{ 'Quotes'|trans }}</a></td>
                        <td>{{ quotes_count }}</td>
                    </tr>
                    <tr>
                        <td><a href="{{ path('admin_reminder_index') }}">{{ 'Reminders'|trans }}</a></td>
                        <td>{{ reminders_count }}</td>
                    </tr>
                    <tr>
                        <td><a href="{{ path('admin_routine_index') }}">{{ 'Routines'|trans }}</a></td>
                        <td>{{ routines_count }}</td>
                    </tr>
                    <tr>
                        <td><a href="{{ path('admin_user_index') }}">{{ 'Users'|trans }}</a></td>
                        <td>{{ users_count }}</td>
