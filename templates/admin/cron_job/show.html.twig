{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_workspace') }}">
            {{ 'Workspace'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('admin_cron_job_index') }}">
            {{ 'Cron jobs'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">
        {{ 'Cron job details'|trans }}
    </li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Cron job details'|trans }}
            <a class="btn btn-secondary btn-sm float-right ml-2" href="{{ path('admin_cron_job_index') }}">
                <i aria-hidden="true" class="bi bi-x-square"></i>
            </a>
            <a class="btn btn-success btn-sm float-right" href="{{ path('admin_cron_job_edit', {'id': cron_job.id}) }}">
                <i aria-hidden="true" class="bi bi-pencil-square"></i>
                {{ 'Edit'|trans }}
            </a>
            <ul class="nav nav-tabs card-header-tabs mt-2" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="basic-tab" data-toggle="tab" href="#basic" role="tab" aria-controls="basic" aria-selected="true">
                        {{ 'Basic'|trans }}
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="additional-tab" data-toggle="tab" href="#additional" role="tab" aria-controls="additional" aria-selected="false">
                        {{ 'Additional'|trans }}
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="basic" role="tabpanel" aria-labelledby="basic-tab">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 20%;">
                                    {{ 'Name'|trans }}
                                </th>
                                <td>
                                    {{ cron_job.name }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Command'|trans }}
                                </th>
                                <td>
                                    {{ cron_job.command }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Schedule'|trans }}
                                </th>
                                <td>
                                    {{ cron_job.schedule }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Description'|trans }}
                                </th>
                                <td>
                                    {{ cron_job.description }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Enabled'|trans }}
                                </th>
                                <td>
                                    {% if cron_job.enabled %}
                                        <span class="badge badge-success">
                                            {{ 'Yes'|trans }}
                                        </span>
                                    {% else %}
                                        <span class="badge badge-danger">
                                            {{ 'No'|trans }}
                                        </span>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane fade" id="additional" role="tabpanel" aria-labelledby="additional-tab">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 20%;">
                                    {{ 'ID'|trans }}
                                </th>
                                <td>
                                    {{ cron_job.id }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'Cron job details'|trans }}
{% endblock %}
