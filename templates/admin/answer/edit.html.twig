{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_workspace') }}">
            {{ 'Workspace'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('admin_question_show', {'uuid': answer.question.uuid}) }}">
            {{ 'Question details'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">
        {{ 'Edit an answer'|trans }}
    </li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Edit an answer'|trans }}

            {% if is_granted('ROLE_SUPER_ADMIN') %}
                {{ include('admin/answer/_delete_form.html.twig') }}
            {% endif %}
        </div>
        <div class="card-body">
            {{ include('admin/answer/_form.html.twig', {'button_label': 'Update'|trans}) }}
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'Edit an answer'|trans }}
{% endblock %}
