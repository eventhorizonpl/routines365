{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_workspace') }}">
            {{ 'Workspace'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('admin_question_show', {'uuid': answer.question.uuid}) }}">
            {{ 'Question details'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">
        {{ 'Create answer'|trans }}
    </li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Create answer'|trans }}
            <a class="btn btn-info btn-sm float-right" href="{{ path('admin_question_show', {'uuid': answer.question.uuid}) }}">
                <i aria-hidden="true" class="bi bi-arrow-left-square"></i>
                {{ 'Back'|trans }}
            </a>
        </div>
        <div class="card-body">
            {{ include('admin/answer/_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} - {{ 'Create answer'|trans }}{% endblock %}
