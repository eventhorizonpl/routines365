{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_workspace') }}">
            {{ 'Workspace'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('admin_question_show', {'uuid': answer.question.uuid}) }}">
            {{ 'Question details'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">
        {{ 'Create an answer'|trans }}
    </li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Create an answer'|trans }}
            <a class="btn btn-secondary btn-sm float-right" href="{{ path('admin_question_show', {'uuid': answer.question.uuid}) }}">
                <i aria-hidden="true" class="bi bi-x-square"></i>
            </a>
        </div>
        <div class="card-body">
            {{ include('admin/answer/_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'Create an answer'|trans }}
{% endblock %}
