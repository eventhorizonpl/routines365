{% extends 'admin_layout.html.twig' %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <a href="{{ path('admin_workspace') }}">
            {{ 'Workspace'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item">
        <a href="{{ path('admin_report_index') }}">
            {{ 'Reports'|trans }}
        </a>
    </li>
    <li class="breadcrumb-item active">
        {{ 'Report details'|trans }}
    </li>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            {{ 'Report details'|trans }}
            <a class="btn btn-secondary btn-sm float-right ml-2" href="{{ path('admin_report_index') }}">
                <i aria-hidden="true" class="bi bi-x-square"></i>
            </a>
            <ul class="nav nav-tabs card-header-tabs mt-2" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="basic-tab" data-toggle="tab" href="#basic" role="tab" aria-controls="home" aria-selected="true">
                        {{ 'Basic'|trans }}
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="additional-tab" data-toggle="tab" href="#additional" role="tab" aria-controls="report" aria-selected="false">
                        {{ 'Additional'|trans }}
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="basic" role="tabpanel" aria-labelledby="basic-tab">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 20%;">
                                    {{ 'Data'|trans }}
                                </th>
                                <td>
                                    {% if report.data %}
                                        <ul>
                                            {% for data in report.data %}
                                                <li>
                                                    <ul>
                                                        {% for key, value in data %}
                                                            <li>
                                                                {{ key }} =
                                                                {% if key == constant('App\\Entity\\Report::DATA_KEY_REMINDER') %}
                                                                    <a href="{{ path('admin_reminder_show', {'uuid': value}) }}">
                                                                        {{ value }}
                                                                    </a>
                                                                {% elseif key == constant('App\\Entity\\Report::DATA_KEY_REMINDER_MESSAGE') %}
                                                                    <a href="{{ path('admin_reminder_message_show', {'uuid': value}) }}">
                                                                        {{ value }}
                                                                    </a>
                                                                {% elseif key == constant('App\\Entity\\Report::DATA_KEY_SENT_REMINDER') %}
                                                                    <a href="{{ path('admin_sent_reminder_show', {'uuid': value}) }}">
                                                                        {{ value }}
                                                                    </a>
                                                                {% else %}
                                                                    {{ value }}
                                                                {% endif %}
                                                            </li>
                                                        {% endfor %}
                                                    </ul>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Status'|trans }}
                                </th>
                                <td>
                                    {{ report.status }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Type'|trans }}
                                </th>
                                <td>
                                    {{ report.type }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane fade" id="additional" role="tabpanel" aria-labelledby="report-tab">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <th scope="row" style="width: 20%;">
                                    {{ 'ID'|trans }}
                                </th>
                                <td>
                                    {{ report.id }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'UUID'|trans }}
                                </th>
                                <td>
                                    {{ report.uuid }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Created at'|trans }}
                                </th>
                                <td>
                                    {{ report.createdAt ? report.createdAt|date('Y-m-d H:i:s') : '' }}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Deleted at'|trans }}
                                </th>
                                <td>
                                    {% if report.deletedAt %}
                                        {{ report.deletedAt|date('Y-m-d H:i:s') }}
                                        <a class="btn btn-warning" href="{{ path('admin_report_undelete', {'uuid': report.uuid}) }}">
                                            <i aria-hidden="true" class="bi bi-trash-restore"></i>
                                            {{ 'Undelete'|trans }}
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    {{ 'Updated at'|trans }}
                                </th>
                                <td>
                                    {{ report.updatedAt ? report.updatedAt|date('Y-m-d H:i:s') : '' }}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'Report details'|trans }}
{% endblock %}
