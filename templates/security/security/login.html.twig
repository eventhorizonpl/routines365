{% extends 'frontend_layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    {{ 'Login'|trans }}
                </div>
                <div class="card-body">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('security_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <div class="form-group row">
                            <label for="inputEmail" class="col-sm-3 col-form-label">{{ 'Email'|trans }}</label>
                            <div class="col-sm-9">
                                <input class="form-control" id="inputEmail" name="email" type="email" value="{{ last_username }}" required autofocus>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="inputPassword" class="col-sm-3 col-form-label">{{ 'Password'|trans }}</label>
                            <div class="col-sm-9">
                                <input class="form-control" id="inputPassword" name="password" type="password" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-9">
                                <div class="form-check">
                                    <input class="form-check-input" id="inputRememberMe" name="_remember_me" type="checkbox">
                                    <label class="form-check-label" for="inputRememberMe">
                                        {{ 'Remember me'|trans }}
                                    </label>
                                </div>
                            </div>
                        </div>
                        <input name="_csrf_token" type="hidden" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button class="btn btn-primary" type="submit">
                                    {{ 'Login'|trans }}
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}{{ 'Login'|trans }}{% endblock %}
