{% extends 'frontend_layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    {{ 'Reset your password'|trans }}
                </div>
                <div class="card-body">
                    {{ form_start(requestForm) }}
                        {% for flashError in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                        {% endfor %}
                        {{ form_row(requestForm.email) }}
                        <div>
                            <small>
                                {{ 'Enter your email address and we we will send you a link to reset your password.'|trans }}
                            </small>
                        </div>

                        <button class="btn btn-primary">
                            {{ 'Send password reset email'|trans }}
                        </button>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}{{ 'Reset your password'|trans }}{% endblock %}
