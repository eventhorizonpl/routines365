{% extends 'frontend_layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="card col-md-10 offset-md-1">
            <div class="card-body">
                <h1 class="card-title h3">
                    <a href="{{ path('frontend_static_page_how_to') }}">
                        {{ 'How-to'|trans }}
                    </a> -
                    {{ 'Routines'|trans }}
                </h1>
                <hr>
                {{ include('frontend/static_page/how_to/_routines_start.html.twig') }}
                <br>
                {{ include('frontend/static_page/how_to/_routines_list.html.twig') }}
                <br>
                {{ include('frontend/static_page/how_to/_routines_new.html.twig') }}
                <br>
                {{ include('frontend/static_page/how_to/_routines_edit.html.twig') }}
                <br>
                <div class="lead">
                    Now when you visit the "Routines" section by clicking
                    <a href="#">
                        <i aria-hidden="true" class="bi bi-arrow-repeat"></i>
                        {{ 'Routines'|trans }}
                    </a>
                    in the navigation menu again you will see a list of your routines.
                    You can view more details about each routine when you click
                    <button class="btn btn-primary btn-sm">
                        <i aria-hidden="true" class="bi bi-eye"></i>
                        {{ 'Show'|trans }}
                    </button>
                    next to its name.
                </div>
                <br>
                <div class="lead">
                    Your next step should be creating a reminder. Please read more in
                    <a href="{{ path('frontend_static_page_how_to_reminders') }}">
                        {{ 'Reminders'|trans }}
                    </a>
                    documentation.
                </div>
                <br>
                <div class="lead">
                    <a href="{{ path('frontend_static_page_how_to_reminders') }}">
                        {{ 'Reminders'|trans }}
                    </a>
                    <br>
                    <a href="{{ path('frontend_static_page_how_to_completing_routines') }}">
                        {{ 'Completing routines'|trans }}
                    </a>
                    <br>
                    <a href="{{ path('frontend_static_page_how_to_notes') }}">
                        {{ 'Notes'|trans }}
                    </a>
                    <br>
                    <a href="{{ path('frontend_static_page_how_to_rewards') }}">
                        {{ 'Rewards'|trans }}
                    </a>
                    <br>
                    <a href="{{ path('frontend_static_page_how_to_goals') }}">
                        {{ 'Goals'|trans }}
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'How-to'|trans }} - {{ 'Routines'|trans }}
{% endblock %}
