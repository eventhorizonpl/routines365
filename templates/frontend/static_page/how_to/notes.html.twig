{% extends 'frontend_layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="card col-md-10 offset-md-1">
            <div class="card-body">
                <h1 class="card-title h3">
                    <a href="{{ path('frontend_static_page_how_to') }}">
                        {{ 'How-to'|trans }}
                    </a> -
                    {{ 'Notes'|trans }}
                </h1>
                <hr>
                {{ include('frontend/static_page/how_to/_notes_start.html.twig') }}
                <br>
                {{ include('frontend/static_page/how_to/_notes_list.html.twig') }}
                <br>
                {{ include('frontend/static_page/how_to/_notes_new.html.twig') }}
                <br>
                {{ include('frontend/static_page/how_to/_notes_edit.html.twig') }}
                <br>
                <div class="lead">
                    Now when you visit the "Notes" section by clicking
                    <a href="#">
                        <i aria-hidden="true" class="bi bi-pen"></i>
                        {{ 'Notes'|trans }}
                    </a>
                    in the navigation menu again you will see a list of your notes.
                    You can view more details about each note when you click
                    <button class="btn btn-primary btn-sm">
                        <i aria-hidden="true" class="bi bi-eye"></i>
                        {{ 'Show'|trans }}
                    </button>
                    next to its name.
                </div>
                <br>
                <div class="lead">
                    Your next step could be creating a reward. Please read more in
                    <a href="{{ path('frontend_static_page_how_to_rewards') }}">
                        {{ 'Rewards'|trans }}
                    </a>
                    documentation.
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'How-to'|trans }} - {{ 'Notes'|trans }}
{% endblock %}
