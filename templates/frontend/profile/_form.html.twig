{{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.sendWeeklyMonthlyStatistics, {'attr': {'class': 'custom-select'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.showMotivationalMessages, {'attr': {'class': 'custom-select'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.theme, {'attr': {'class': 'custom-select'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            {{ form_row(form.timeZone, {'attr': {'class': 'custom-select'}}) }}
{#
            <span id="tz-placeholder"></span>
#}
        </div>
        <div class="col-md-4">
            <a class="btn btn-success mt-4" href="#" id="find_time_zone">
                <i aria-hidden="true" class="bi bi-geo-alt"></i>
                {{ 'Find time zone'|trans }}
            </a>
        </div>
    </div>
    {% if (true == constant('App\\Resource\\ConfigResource::INVITATIONS_ENABLED')) or (true == constant('App\\Resource\\ConfigResource::MOTIVATE_A_FRIEND_ENABLED')) %}
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.firstName, {'attr': {'autocomplete': 'given-name', 'placeholder': 'First name'|trans}}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.lastName, {'attr': {'autocomplete': 'family-name', 'placeholder': 'Last name'|trans}}) }}
            </div>
        </div>
    {% endif %}
    {% if true == constant('App\\Resource\\ConfigResource::NOTIFICATION_SMS_ENABLED') %}
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.phone, {'attr': {'autocomplete': 'tel', 'placeholder': '+xx xxx xxx xxx'|trans}}) }}
            </div>
        </div>
    {% endif %}
    <hr>
    <div class="row">
        <div class="col-md-12 text-center">
            <button class="btn btn-primary" type="submit" title="{{ button_label|default('Save'|trans) }}">
                <i aria-hidden="true" class="bi bi-save"></i>
                {{ button_label|default('Save'|trans) }}
            </button>
        </div>
    </div>
{{ form_end(form) }}
