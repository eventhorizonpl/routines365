{% extends 'frontend_layout.html.twig' %}

{% block content %}
    {% if rewards|length %}
        <div class="row mb-3">
            <div class="col-md-10 offset-md-1">
                <h3 class="float-left">
                    <i class="fas fa-award"></i>
                    {{ 'Rewards'|trans }}
                </h3>
                <a class="btn btn-primary float-right" href="{{ path('frontend_reward_new') }}">
                    <i class="fas fa-pen-fancy"></i>
                    {{ 'Create a reward'|trans }}
                </a>
            </div>
        </div>
    {% endif %}
    {% for reward in rewards %}
        <div class="row mb-5">
            <div class="col-md-10 offset-md-1">
                <div class="card bg-dark text-white">
                    <div class="card-header">
                        {{ reward.name }}
                        <a class="btn btn-primary btn-sm float-right" href="{{ path('frontend_reward_show', {'uuid': reward.uuid}) }}">
                            <i class="fas fa-eye"></i>
                            {{ 'Show'|trans }}
                        </a>
                    </div>
                    <div class="card-body">
                        {% if reward.isAwarded %}
                            <h2>
                                <i class="fas fa-award"></i>
                                {{ 'Awarded'|trans }}
                                <i class="fas fa-thumbs-up"></i>
                            </h2>
                        {% endif %}
                        <p class="card-text">
                            <a href="{{ path('frontend_routine_show_rewards', {'uuid': reward.routine.uuid}) }}">
                                {{ reward.routine.name }}
                            </a>
                        </p>
                        <p class="card-text">
                            {{ reward.description }}
                        </p>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" style="width: {{ reward.numberOfCompletionsPercent }}%" aria-valuenow="{{ reward.numberOfCompletionsPercent }}" aria-valuemin="0" aria-valuemax="100"></div>
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: {{ 100 - reward.numberOfCompletionsPercent }}%" aria-valuenow="{{ 100 - reward.numberOfCompletionsPercent }}" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row mb-5">
            <div class="col-md-4 offset-md-4">
                <div class="card text-center text-white bg-secondary">
                    <div class="card-body">
                        <p class="card-text">
                            {{ 'You do not have any rewards!'|trans }}
                        </p>
                        <a class="btn btn-primary" href="{{ path('frontend_reward_new') }}">
                            <i class="fas fa-pen-fancy"></i>
                            {{ 'Create a reward'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
    {% if rewards|length %}
        <div class="row mb-5">
            <div class="col-md-10 offset-md-1">
                <div class="navigation">
                    {{ knp_pagination_render(rewards) }}
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'Rewards'|trans }}
{% endblock %}
