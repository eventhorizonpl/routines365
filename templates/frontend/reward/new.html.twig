{% extends 'frontend_layout.html.twig' %}

{% block content %}
    <div class="row mb-5">
        <div class="col-md-10 offset-md-1">
            <div class="card bg-dark text-white">
                <div class="card-header">
                    {{ 'Create reward'|trans }}
                    {% if reward.routine %}
                        <a class="btn btn-light btn-sm float-right" href="{{ path('frontend_routine_show_rewards', {'uuid': reward.routine.uuid }) }}">
                            <i class="fas fa-times"></i>
                            {{ 'Close'|trans }}
                        </a>
                    {% else %}
                        <a class="btn btn-light btn-sm float-right" href="{{ path('frontend_reward_index') }}">
                            <i class="fas fa-times"></i>
                            {{ 'Close'|trans }}
                        </a>
                    {% endif %}
                </div>
                <div class="card-body">
                    {{ include('frontend/reward/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} - {{ 'Create reward'|trans }}{% endblock %}
