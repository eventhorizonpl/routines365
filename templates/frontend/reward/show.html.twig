{% extends 'frontend_layout.html.twig' %}

{% block content %}
    <div class="row mb-5">
        <div class="col-md-10 offset-md-1">
            <div class="card text-white bg-secondary">
                <div class="card-header">
                    {{ reward.name }}
                    <a class="btn btn-info btn-sm float-right ml-2" href="{{ path('frontend_reward_edit', {'uuid': reward.uuid}) }}">
                        <i class="fas fa-edit"></i>
                        {{ 'Edit'|trans }}
                    </a>
                    <a class="btn btn-light btn-sm float-right" href="{{ path('frontend_reward_index') }}">
                        <i class="fas fa-arrow-left"></i>
                        {{ 'Back'|trans }}
                    </a>
                </div>
                <div class="card-body">
                    {% if reward.isAwarded %}
                        <h2><i class="fas fa-award"></i> {{ 'Awarded'|trans }} <i class="fas fa-thumbs-up"></i></h2>
                    {% endif %}
                    {% if reward.routine %}
                        <p class="card-text">
                            <a href="{{ path('frontend_routine_show', {'uuid': reward.routine.uuid}) }}">
                                {{ reward.routine.name }}
                            </a>
                        </p>
                    {% endif %}
                    <p class="card-text">{{ reward.description }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} - {{ 'Reward details'|trans }} {% endblock %}
