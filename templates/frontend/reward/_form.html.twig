{{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.name, {'attr': {'placeholder': 'Name of your reward.'|trans}}) }}
        </div>
    </div>
    {% if not reward.routine %}
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.routine) }}
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.type, {'attr': {'class': 'custom-select'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.requiredNumberOfCompletions, {'attr': {'class': 'custom-select'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.description, {'attr': {'placeholder': 'Description of your reward.'|trans, 'rows': 5}}) }}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12 text-center">
            <button class="btn btn-primary" type="submit">
                <i aria-hidden="true" class="bi bi-save"></i>
                {{ button_label|default('Save'|trans) }}
            </button>
        </div>
    </div>
{{ form_end(form) }}
