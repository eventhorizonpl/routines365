{{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.type) }}
    {% if not reward.routine %}
        {{ form_row(form.routine) }}
    {% endif %}
    {{ form_row(form.requiredNumberOfCompletions) }}
    {{ form_row(form.description) }}

    <hr>
    <button class="btn btn-primary">
        <i class="fas fa-save"></i>
        {{ button_label|default('Save'|trans) }}
    </button>
