{% extends 'frontend_layout.html.twig' %}

{% block content %}
    {% if achievements|length %}
        <div class="row mb-3">
            <div class="col-md-10 offset-md-1">
                <h3 class="float-left">
                    <i aria-hidden="true" class="bi bi-trophy"></i>
                    {{ 'Achievements'|trans }}
                </h3>
            </div>
        </div>
    {% endif %}
    <div class="row mb-5">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header">
                    {{ 'Completed routines'|trans }}
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        {% for achievement in achievements %}
                            {% if achievement.type == constant('App\\Enum\\AchievementTypeEnum::COMPLETED_ROUTINE') %}
                                <div class="col-6 col-lg-3 col-md-4 mb-3 mt-3">
                                    <div class="badge {% if user.hasAchievement(achievement) %}badge-primary{% else %}badge-light{% endif %} p-3" style="min-width: 151px;">
                                        <h4>
                                            <i aria-hidden="true" class="bi bi-star"></i>
                                        </h4>
                                        <br><br>
                                        <h5>
                                            {{ 'Level'|trans }} {{ achievement.level }}
                                        </h5>
                                        <br><br>
                                        {{ achievement.name }}<br><br>
                                        ({{ achievement.requirement }} {{ 'required'|trans }})
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header">
                    {{ 'Completed goals'|trans }}
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        {% for achievement in achievements %}
                            {% if achievement.type == constant('App\\Enum\\AchievementTypeEnum::COMPLETED_GOAL') %}
                                <div class="col-6 col-lg-3 col-md-4 mb-3 mt-3">
                                    <div class="badge {% if user.hasAchievement(achievement) %}badge-primary{% else %}badge-light{% endif %} p-3" style="min-width: 151px;">
                                        <h4>
                                            <i aria-hidden="true" class="bi bi-check-circle"></i>
                                        </h4>
                                        <br><br>
                                        <h5>
                                            {{ 'Level'|trans }} {{ achievement.level }}
                                        </h5>
                                        <br><br>
                                        {{ achievement.name }}<br><br>
                                        ({{ achievement.requirement }} {{ 'required'|trans }})
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header">
                    {{ 'Completed projects'|trans }}
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        {% for achievement in achievements %}
                            {% if achievement.type == constant('App\\Enum\\AchievementTypeEnum::COMPLETED_PROJECT') %}
                                <div class="col-6 col-lg-3 col-md-4 mb-3 mt-3">
                                    <div class="badge {% if user.hasAchievement(achievement) %}badge-primary{% else %}badge-light{% endif %} p-3" style="min-width: 151px;">
                                        <h4>
                                            <i aria-hidden="true" class="bi bi-check-circle"></i>
                                        </h4>
                                        <br><br>
                                        <h5>
                                            {{ 'Level'|trans }} {{ achievement.level }}
                                        </h5>
                                        <br><br>
                                        {{ achievement.name }}<br><br>
                                        ({{ achievement.requirement }} {{ 'required'|trans }})
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-5">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header">
                    {{ 'Created notes'|trans }}
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        {% for achievement in achievements %}
                            {% if achievement.type == constant('App\\Enum\\AchievementTypeEnum::CREATED_NOTE') %}
                                <div class="col-6 col-lg-3 col-md-4 mb-3 mt-3">
                                    <div class="badge {% if user.hasAchievement(achievement) %}badge-primary{% else %}badge-light{% endif %} p-3" style="min-width: 151px;">
                                        <h4>
                                            <i aria-hidden="true" class="bi bi-pen"></i>
                                        </h4>
                                        <br><br>
                                        <h5>
                                            {{ 'Level'|trans }} {{ achievement.level }}
                                        </h5>
                                        <br><br>
                                        {{ achievement.name }}<br><br>
                                        ({{ achievement.requirement }} {{ 'required'|trans }})
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'Achievements'|trans }}
{% endblock %}
