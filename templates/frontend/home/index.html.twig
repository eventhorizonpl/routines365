{% extends 'frontend_layout.html.twig' %}

{% block content %}
    <div class="jumbotron">
        <h1 class="display-3">{{ 'Routines365'|trans }}</h1>
        <p class="lead">{{ 'Routines365'|trans }}</p>
        <hr class="my-4">
        <p>{{ 'Routines365'|trans }}</p>
        <p class="lead">
            {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
