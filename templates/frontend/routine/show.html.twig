{% extends 'frontend_layout.html.twig' %}

{% block content %}
    <div class="row mb-5">
        <div class="col-md-10 offset-md-1">
            <div class="card text-white bg-secondary">
                <div class="card-header">
                    {{ routine.name }}
                    <a class="btn btn-info btn-sm float-right ml-2" href="{{ path('frontend_routine_edit', {'uuid': routine.uuid}) }}">
                        <i class="fas fa-edit"></i>
                        {{ 'Edit'|trans }}
                    </a>
                    <a class="btn btn-light btn-sm float-right" href="{{ path('frontend_routine_index') }}">
                        <i class="fas fa-arrow-left"></i>
                        {{ 'Back'|trans }}
                    </a>
                </div>
                <div class="card-body">
                    <p class="card-text">{{ routine.description }}</p>
                    <p>{{ 'Type'|trans }}: {{ routine.type }}</p>
                    <p>
                        {{ 'Is enabled'|trans }}:
                        {% if routine.isEnabled %}
                            <span class="badge badge-primary">{{ 'Yes'|trans }}</span>
                        {% else %}
                            <span class="badge badge-danger">{{ 'No'|trans }}</span>
                        {% endif %}
                    </p>
                    <hr>
                    <p>
                        {{ 'Notes'|trans }}: {{ routine.notes|length }}
                        <a class="btn btn-primary btn-sm float-right" href="{{ path('frontend_note_new', {'uuid': routine.uuid}) }}">
                            <i class="fas fa-pen-fancy"></i>
                            {{ 'Create Note'|trans }}
                        </a>
                    </p>
                    <hr>
                    <p>
                        {{ 'Goals'|trans }}: {{ routine.goals|length }}
                        <a class="btn btn-primary btn-sm float-right" href="{{ path('frontend_goal_new', {'uuid': routine.uuid}) }}">
                            <i class="fas fa-bullseye"></i>
                            {{ 'Create Goal'|trans }}
                        </a>
                    </p>
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#not-completed">
                                {{ 'Not completed'|trans }}
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#completed">
                                {{ 'Completed'|trans }}
                            </a>
                        </li>
                    </ul>
                    <div id="myTabContent" class="tab-content mt-1">
                        <div class="tab-pane fade active show" id="not-completed">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>{{ 'Name'|trans }}</th>
                                        <th>{{ 'Description'|trans }}</th>
                                        <th>{{ 'Updated at'|trans }}</th>
                                        <th>{{ 'Actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for goal in routine.goalsNotCompleted %}
                                        <tr>
                                            <td>{{ goal.name }}</td>
                                            <td>{{ goal.description }}</td>
                                            <td>{{ goal.updatedAt ? goal.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                            <td style="width: 25%;">
                                                <a class="btn btn-primary btn-sm m-1" href="{{ path('frontend_goal_complete', {'uuid': goal.uuid}) }}">
                                                    <i class="fas fa-check"></i>
                                                    {{ 'Complete'|trans }}
                                                </a>
                                                <a class="btn btn-info btn-sm m-1" href="{{ path('frontend_goal_edit', {'uuid': goal.uuid}) }}">
                                                    <i class="fas fa-edit"></i>
                                                    {{ 'Edit'|trans }}
                                                </a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4">
                                                {{ 'You do not have any Goals.'|trans }}<br>
                                                <a class="btn btn-primary btn-sm m-1" href="{{ path('frontend_goal_new', {'uuid': routine.uuid}) }}">
                                                    <i class="fas fa-bullseye"></i>
                                                    {{ 'Create Goal'|trans }}
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="completed">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>{{ 'Name'|trans }}</th>
                                        <th>{{ 'Description'|trans }}</th>
                                        <th>{{ 'Updated at'|trans }}</th>
                                        <th>{{ 'Actions'|trans }}</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for goal in routine.goalsCompleted %}
                                        <tr>
                                            <td>{{ goal.name }}</td>
                                            <td>{{ goal.description }}</td>
                                            <td>{{ goal.updatedAt ? goal.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                            <td style="width: 25%;">
                                                <a class="btn btn-info btn-sm m-1" href="{{ path('frontend_goal_edit', {'uuid': goal.uuid}) }}"><i class="fas fa-edit"></i> {{ 'Edit'|trans }}</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="4">
                                                {{ 'You do not have any Goals.'|trans }}<br>
                                                <a class="btn btn-primary btn-sm m-1" href="{{ path('frontend_goal_new', {'uuid': routine.uuid}) }}"><i class="fas fa-bullseye"></i> {{ 'Create Goal'|trans }}</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}{{ parent() }} - {{ 'Routine details'|trans }} {% endblock %}
