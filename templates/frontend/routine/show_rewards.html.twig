{% extends 'frontend/routine/show.html.twig' %}

{% block routine_content %}
    <p>
        {{ 'Rewards'|trans }}: {{ routine.rewards|length }}
        <a class="btn btn-primary btn-sm float-right" href="{{ path('frontend_reward_new', {'uuid': routine.uuid, 'context': constant('App\\Entity\\Reward::CONTEXT_ROUTINE')}) }}" title="{{ 'Create a reward'|trans }}">
            <i aria-hidden="true" class="bi bi-award"></i>
            {{ 'Create a reward'|trans }}
        </a>
    </p>
    {% if routine.rewards|length %}
        <div class="table-responsive">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>
                            {{ 'Name'|trans }}
                        </th>
                        <th>
                            {{ 'Actions'|trans }}
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for reward in routine.rewards %}
                        <tr>
                            <td>
                                <a href="{{ path('frontend_reward_show', {'uuid': reward.uuid}) }}">
                                    {{ reward.name }}
                                </a>
                            </td>
                            <td style="width: 20%;">
                                <a class="btn btn-success btn-sm" href="{{ path('frontend_reward_edit', {'uuid': reward.uuid, 'context': constant('App\\Entity\\Reward::CONTEXT_ROUTINE')}) }}" title="{{ 'Edit'|trans }}">
                                    <i aria-hidden="true" class="bi bi-pencil-square"></i>
                                    {{ 'Edit'|trans }}
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
