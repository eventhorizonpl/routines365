{% extends 'frontend_layout.html.twig' %}

{% block content %}
    {% if know_your_tools is defined and know_your_tools %}
        <div class="alert alert-info alert-dismissible fade show col-md-8 offset-md-2" role="alert">
            {% if know_your_tools == constant('App\\Resource\\KytResource::ROUTINES_EDIT') %}
                {{ include('frontend/static_page/how_to/_routines_edit.html.twig') }}
            {% endif %}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}

    <div class="row mb-5">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header">
                    {{ 'Edit a routine'|trans }}
                    {{ include('frontend/routine/_delete_form.html.twig') }}
                </div>
                <div class="card-body">
                    {{ include('frontend/routine/_form.html.twig', {'button_label': 'Update'|trans}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'Edit a routine'|trans }}
{% endblock %}
