{% extends 'frontend_layout.html.twig' %}

{% block content %}
    <div class="row mb-5">
        <div class="col-md-10 offset-md-1">
            <div class="card bg-dark text-white">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-8 col-6">
                            {{ note.title }}
                        </div>
                        <div class="col-md-4 col-6">
                            <a class="btn btn-success btn-sm float-right ml-2" href="{{ path('frontend_note_edit', {'uuid': note.uuid}) }}">
                                <i class="fas fa-edit"></i>
                                {{ 'Edit'|trans }}
                            </a>
                            <a class="btn btn-light btn-sm float-right" href="{{ path('frontend_note_index') }}">
                                <i class="fas fa-arrow-left"></i>
                                {{ 'Back'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {% if note.routine %}
                        <p class="card-text">
                            <a href="{{ path('frontend_routine_show_notes', {'uuid': note.routine.uuid}) }}">
                                {{ note.routine.name }}
                            </a>
                        </p>
                    {% endif %}
                    <p class="card-text">
                        {{ note.content }}
                    </p>
                    <p class="card-text">
                        <small class="text-muted">
                            {{ note.createdAt ? note.createdAt|date('Y-m-d H:i:s') : '' }}
                        </small>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'Note details'|trans }}
{% endblock %}
