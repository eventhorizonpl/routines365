{% extends 'frontend_layout.html.twig' %}

{% block content %}
    {% if know_your_tools is defined and know_your_tools %}
        <div class="alert alert-info alert-dismissible fade show col-md-8 offset-md-2" role="alert">
            {% if know_your_tools == constant('App\\Resource\\KytResource::NOTES_NEW') %}
                {{ include('frontend/static_page/how_to/_notes_new.html.twig') }}
            {% endif %}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endif %}

    <div class="row mb-5">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header">
                    {{ 'Create a note'|trans }}
                    <span class="float-right">
                        <a aria-label="{{ 'Information'|trans }}" class="btn btn-info btn-sm" href="{{ path('frontend_static_page_how_to_notes') }}" title="{{ 'Information'|trans }}">
                            <i aria-hidden="true" class="bi bi-question-square"></i>
                        </a>
                        {% if note.routine %}
                            <a aria-label="{{ 'Close'|trans }}" class="btn btn-secondary btn-sm ml-2" href="{{ path('frontend_routine_show_notes', {'uuid': note.routine.uuid }) }}" title="{{ 'Close'|trans }}">
                                <i aria-hidden="true" class="bi bi-x-square"></i>
                            </a>
                        {% else %}
                            <a aria-label="{{ 'Close'|trans }}" class="btn btn-secondary btn-sm ml-2" href="{{ path('frontend_note_index') }}" title="{{ 'Close'|trans }}">
                                <i aria-hidden="true" class="bi bi-x-square"></i>
                            </a>
                        {% endif %}
                    </span>
                </div>
                <div class="card-body">
                    {{ include('frontend/note/_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}
    {{ parent() }} - {{ 'Create a note'|trans }}
{% endblock %}
