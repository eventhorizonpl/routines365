<form class="float-right" method="post" action="{{ path('frontend_goal_delete', {'uuid': goal.uuid, 'context': context}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ goal.uuid) }}">
    <button class="btn btn-sm btn-danger mr-4">
        <i class="fa fa-trash"></i>
        {{ 'Delete'|trans }}
    </button>
    {% if project %}
        <a class="btn btn-light btn-sm" href="{{ path('frontend_project_show', {'uuid': project.uuid}) }}">
            <i class="fas fa-times"></i>
            {{ 'Close'|trans }}
        </a>
    {% elseif routine %}
        <a class="btn btn-light btn-sm" href="{{ path('frontend_routine_show_goals', {'uuid': routine.uuid}) }}">
            <i class="fas fa-times"></i>
            {{ 'Close'|trans }}
        </a>
    {% endif %}
</form>
