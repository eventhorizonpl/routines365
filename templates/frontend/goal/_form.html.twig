{{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.name, {'attr': {'placeholder': 'Name of the goal i.e. "50 push ups daily for 7 days in a row".'|trans}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.routine, {'attr': {'class': 'custom-select'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.project, {'attr': {'class': 'custom-select'}}) }}
        </div>
    </div>
    {% if goal.id %}
        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.isCompleted, {'attr': {'class': 'custom-select'}}) }}
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.description, {'attr': {'placeholder': 'Short description of the goal.'|trans, 'rows': 5}}) }}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12 text-center">
            <button class="btn btn-primary" type="submit" title="{{ button_label|default('Save'|trans) }}">
                <i aria-hidden="true" class="bi bi-save"></i>
                {{ button_label|default('Save'|trans) }}
            </button>
        </div>
    </div>
{{ form_end(form) }}
