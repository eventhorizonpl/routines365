{{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-md-{% if goal.id %}10{% else %}12{% endif %}">
            {{ form_row(form.name, {'attr': {'placeholder': 'Name of your goal i.e. "50 push ups daily for 7 days in a row".'|trans}}) }}
        </div>
        {% if goal.id %}
            <div class="col-md-2">
                {{ form_row(form.isCompleted, {'attr': {'class': 'custom-select'}}) }}
            </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-md-6">
            {{ form_row(form.routine, {'attr': {'class': 'custom-select'}}) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.project, {'attr': {'class': 'custom-select'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.description, {'attr': {'placeholder': 'Description of your goal.'|trans, 'rows': 5}}) }}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12 text-center">
            <button class="btn btn-primary" type="submit">
                <i aria-hidden="true" class="bi bi-save"></i>
                {{ button_label|default('Save'|trans) }}
            </button>
        </div>
    </div>
{{ form_end(form) }}
