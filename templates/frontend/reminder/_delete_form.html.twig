<form method="post" action="{{ path('frontend_reminder_delete', {'uuid': reminder.uuid}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reminder.uuid) }}">
    <button class="btn btn-warning"><i class="fa fa-trash"></i> {{ 'Delete'|trans }}</button>
</form>
