{{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-md-{% if project.id %}8{% else %}12{% endif %}">
            {{ form_row(form.name, {'attr': {'placeholder': 'Name of the project i.e. "Writing best adventure book ever".'|trans}}) }}
        </div>
        {% if project.id %}
            <div class="col-md-4">
                {{ form_row(form.isCompleted, {'attr': {'class': 'custom-select'}}) }}
            </div>
        {% endif %}
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.description, {'attr': {'placeholder': 'Short description of the project.'|trans, 'rows': 5}}) }}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12 text-center">
            <button class="btn btn-primary" type="submit" title="{{ button_label|default('Save'|trans) }}">
                <i aria-hidden="true" class="bi bi-save"></i>
                {{ button_label|default('Save'|trans) }}
            </button>
        </div>
    </div>
{{ form_end(form) }}
