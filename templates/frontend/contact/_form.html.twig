{{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.title, {'attr': {'placeholder': 'Title of the contact message.'|trans}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.type, {'attr': {'class': 'custom-select'}}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.content, {'attr': {'placeholder': 'Content of the contact message.'|trans, 'rows': 5}}) }}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md-12 text-center">
            <button class="btn btn-primary" type="submit" title="{{ button_label|default('Send'|trans) }}">
                <i aria-hidden="true" class="bi bi-envelope"></i>
                {{ button_label|default('Send'|trans) }}
            </button>
        </div>
    </div>
{{ form_end(form) }}
